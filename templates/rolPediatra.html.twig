<section class="container  justify-content-md-center">
      <!-- en variableTemplate debe estar el path al template que debe cargar el "index" del rol correspondiente -->
      
      <div class="p-3 mb-2 bg-dark text-white">
          Acciones para el rol Pediatra
        </div>
        
          <div class="d-flex justify-content-around  d-flex flex-wrap pt-4">
            <div class="d-flex align-items-start flex-column bg-dark text-white mt-4" >
            <div class="p-2"><h3> Pacientes</h3></div>
              {% for permiso in permisos %}
                {% if permiso.nombre == "listar" %}
                    <div class="p-2">
                      <a class="pl-4 pr-4 pt-4" href= "?c=Paciente&m={{permiso.nombre}}&inicio=0" >
                        
                        <button type="button" class="btn btn-light">Listar</button>
                      </a>
                    </div>
                {% elseif permiso.nombre == "filtrar" %}
                    <div class="p-2">
                      <a class="pl-4 pr-4 pt-4" href= "?c=Paciente&m={{permiso.nombre}}" >
                        
                        <button type="button" class="btn btn-light">Filtrar</button>
                      </a>
                    </div>
                {% endif %}
              {% endfor %}

            </div>

            <div class="d-flex align-items-start flex-column bg-dark text-white mt-4" >
              <div class="p-2"><h3> Datos Demograficos</h3></div>
              {% for permiso in permisos %}
                {% if permiso.nombre == "listar" %}
                    <div class="p-2">
                      <a class="pl-4 pr-4 pt-4" href= "?c=DatosDemograficos&m={{permiso.nombre}}&inicio=0" >
                        
                        <button type="button" class="btn btn-light">Listar</button>
                      </a>
                      </div>
                {% elseif permiso.nombre == "graficoTorta" %} 
                      <div class="p-2">
                      <a class="pl-4 pr-4 pt-4" href= "?c=DatosDemograficos&m={{permiso.nombre}}" >
                        
                        <button type="button" class="btn btn-light">Graficos Generales</button>
                      </a>
                      </div>
                {% endif %}     
              {% endfor %}
            </div>
            <div class="d-flex align-items-start flex-column bg-dark text-white mt-4" >
            <div class="p-2"><h3> Control de salud </h3></div>
            {% for permiso in permisos %}
                {% if permiso.nombre == "listarParaAgregar" %}
                    <div class="p-2">
                      <a class="pl-4 pr-4 pt-4" href= "?c=Paciente&m={{permiso.nombre}}" >
                        
                        <button type="button" class="btn btn-light">Agregar</button>
                      </a>
                      </div>
                {% elseif permiso.nombre == "listarParaListar" %}    
                  <div class="p-2">
                      <a class="pl-4 pr-4 pt-4" href= "?c=Paciente&m={{permiso.nombre}}&inicio=0" >
                        
                        <button type="button" class="btn btn-light">Listar</button>
                      </a>
                      </div>
                {% endif %}
            {% endfor %}
            
            
            
        </div>
          </div>

    </section>
    